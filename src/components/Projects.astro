---
import Card from '@components/ui/Card.astro';
import { getCollection } from 'astro:content';
import imagetrain from '@assets/images/train_gui.png';
import imageSAE from '@assets/images/SAE3A.png';
import imageNDI from '@assets/images/NDI.png';
import imageStage from '@assets/images/stage.png';

const projects = await getCollection('projects');
---

<section
	data-testid="projects"
	id="projects"
	class="flex flex-col flex-wrap items-center justify-center gap-8 text-gray-900 dark:text-gray-100 lg:mb-0 lg:min-h-[20vh]"
>
	<h2 class="font-monospace text-2xl text-orange lg:text-4xl">Projets</h2>
	<hr class="w-1/2 border-orange-500" />
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8 max-w-6xl">
		<Card
			title={projects[0].data.title}
			description={projects[0].data.description}
			tags={projects[0].data.tags}
			url={projects[0].data.url}
			imageUrl={imagetrain}
		/>
		<Card
			title={projects[1].data.title}
			description={projects[1].data.description}
			tags={projects[1].data.tags}
			url={projects[1].data.url}
			imageUrl={imageSAE}
		/>
		<Card
			title={projects[2].data.title}
			description={projects[2].data.description}
			tags={projects[2].data.tags}
			url={projects[2].data.url}
			imageUrl={imageNDI}
		/>
		<Card
			title={projects[3].data.title}
			description={projects[3].data.description}
			tags={projects[3].data.tags}
			url={projects[3].data.url}
			imageUrl={imageStage}
		/>
	</div>
</section>