---
export interface Props {
	tags: string[];
}

const { tags } = Astro.props;
---

<section class="py-8 px-4">
	<div class="max-w-4xl mx-auto">
		<div class="flex flex-wrap gap-3 justify-center">
			{tags.map((tag) => (
				<span class="bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 px-6 py-3 rounded-2xl text-lg font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
					{tag}
				</span>
			))}
		</div>
	</div>
</section>
