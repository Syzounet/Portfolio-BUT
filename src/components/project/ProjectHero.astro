---
import { Icon } from 'astro-icon/components';

export interface Props {
	icon: string; // Nom de l'ic√¥ne heroicons (ex: "briefcase", "globe-alt")
	badge: string;
	badgeColor?: 'orange' | 'green' | 'blue' | 'purple' | 'red' | 'indigo';
	title: string;
	titleHighlight?: string;
	titleHighlightColor?: string;
	description: string;
}

const {
	icon,
	badge,
	badgeColor = 'orange',
	title,
	titleHighlight,
	titleHighlightColor,
	description
} = Astro.props;

// Map des couleurs pour les badges
const badgeColors = {
	orange: 'bg-orange-500 dark:bg-orange-600',
	green: 'bg-green-500 dark:bg-green-600',
	blue: 'bg-blue-600 dark:bg-blue-700',
	purple: 'bg-purple-600 dark:bg-purple-700',
	red: 'bg-red-500 dark:bg-red-600',
	indigo: 'bg-indigo-600 dark:bg-indigo-700',
};
---

<section class="relative py-20 px-4 text-center">
	<div class="relative mx-auto rounded-2xl pb-5 pt-5 shadow-lg dark:bg-gray-800">
		<div class="flex justify-center mb-6">
			<div class="w-16 h-16 flex items-center justify-center rounded-full bg-gradient-to-br from-orange-400 to-orange-600 dark:from-orange-500 dark:to-orange-700">
				<Icon name={`heroicons:${icon}`} class="w-10 h-10 text-white" />
			</div>
		</div>
		<span class={`inline-block ${badgeColors[badgeColor]} text-white px-4 py-2 rounded-full text-sm font-medium mb-4`}>
			{badge}
		</span>
		<h1 class="font-monospace text-4xl lg:text-6xl text-gray-900 dark:text-gray-100 mb-6">
			{title}
			{titleHighlight && (
				<span class={`text-transparent ${titleHighlightColor || 'text-orange-500 dark:text-orange-500'}`}>
					{titleHighlight}
				</span>
			)}
		</h1>
		<p class="text-xl text-gray-700 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
			{description}
		</p>
	</div>
</section>
