---
import { Icon } from 'astro-icon/components';

export interface Props {
	icon: string; // Nom de l'ic√¥ne heroicons
	title: string;
	description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
	<div class="flex items-center mb-4">
		<div class="w-10 h-10 flex items-center justify-center rounded-lg bg-orange-100 dark:bg-orange-900/30 mr-4">
			<Icon name={`heroicons:${icon}`} class="w-6 h-6 text-orange-600 dark:text-orange-400" />
		</div>
		<h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">{title}</h3>
	</div>
	<div class="text-gray-700 dark:text-gray-300 leading-relaxed">
		<slot>
			{description && <p>{description}</p>}
		</slot>
	</div>
</div>
