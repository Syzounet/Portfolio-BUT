---
import heroImage from '@assets/images/moi.jpg';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Salut ! Mon nom est <span class="text-orange">Gauthier Souquet</span> et je suis un Ã©tudiant en informatique sur montpellier.
			</h1>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class={'flex'} name="learn more">Learn more</Button>
		</div>
	</div>
	<div data-testid="moi" class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			src={heroImage}
			alt="moi"
			format="jpg"
			width={500}
			height={500}
			loading="eager"
			class="rounded-full"
		/>
	</div>
</section>
