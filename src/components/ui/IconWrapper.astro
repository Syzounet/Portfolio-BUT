---
import { Icon } from 'astro-icon/components';

export interface Props {
	name: string;
	class?: string;
	size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { name, class: className = '', size = 'md' } = Astro.props;

// Map des tailles
const sizeClasses = {
	sm: 'w-5 h-5',
	md: 'w-6 h-6',
	lg: 'w-8 h-8',
	xl: 'w-12 h-12',
};

const sizeClass = sizeClasses[size];
---

<Icon name={name} class={`${sizeClass} ${className}`} />
