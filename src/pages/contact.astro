const contactInfo = {
	email: 'Gauthier.34m@gmail.com',
	linkedin: 'https://www.linkedin.com/in/gauthier-souquet-878aab202/',
};
---

<Layout>
	<main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-200 dark:from-gray-900 dark:to-gray-800">

		<!-- Hero Section -->
		<section class="relative py-20 px-4 text-center">
			<div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-blue-600 rounded-3xl mx-4 opacity-40 dark:opacity-60"></div>
			<div class="relative max-w-4xl mx-auto">
				<div class="text-6xl mb-6">üìû</div>
