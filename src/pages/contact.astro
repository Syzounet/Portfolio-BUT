---
import Layout from '@layouts/Layout.astro';
import BackToTop from '@components/ui/BackToTop.astro';

const contactInfo = {
    email: 'Gauthier.34m@gmail.com',
    linkedin: 'https://www.linkedin.com/in/gauthier-souquet-878aab202/',
};
---

<Layout>
    <main>
        <section>
            <div class="container mx-auto px-6">
                <h2 class="text-4xl font-semibold text-orange text-center">Contact-moi !</h2>
                <p class="mt-6 text-gray-400 text-center">
                    Vous avez une question ou souhaitez collaborer ? N'hésitez pas à me contacter directement par email.
                </p>
                    <!-- Informations de Contact -->
                    <div class="flex flex-col lg:flex-row items-center justify-center gap-8 mt-16">
                        <h3 class="text-2xl font-semibold text-orange">Mes Coordonnées</h3>
                        <p class="mt-6 text-gray">
                            <span class="block text-lg font-medium text-gray">Email :</span>
                            <a href={`mailto:${contactInfo.email}`} class="text-orange hover:underline">{contactInfo.email}</a>
                        </p>
                        <p class="mt-6 text-gray-400">
                            <span class="block text-lg font-medium text-gray">LinkedIn :</span>
                            <a href={contactInfo.linkedin} target="_blank" class="text-orange hover:underline">Mon profil LinkedIn</a>
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <BackToTop />
    </main>
</Layout>
