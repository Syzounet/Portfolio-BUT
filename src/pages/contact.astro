---
import Layout from '@layouts/Layout.astro';
import BackToTop from '@components/ui/BackToTop.astro';

const contactInfo = {
    email: 'Gauthier.34m@gmail.com',
    linkedin: 'https://www.linkedin.com/in/gauthier-souquet-878aab202/',
};
---

<Layout>
    <main>
        <section id="contact" class="py-16 bg-black">
            <div class="container mx-auto px-6">
                <h2 class="text-center text-4xl font-extrabold text-orange-500">Contactez-moi</h2>
                <p class="text-center text-lg text-gray-400 mt-4">
                    Vous avez une question ou souhaitez collaborer ? N'hésitez pas à me contacter via le formulaire ou directement par email.
                </p>

                <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start mt-12 space-y-8 lg:space-y-0 lg:space-x-8">
                    
                    <!-- Formulaire de Contact -->
                    <form
                        action="https://formspree.io/f/your-form-id"
                        method="POST"
                        class="w-full lg:w-2/3 bg-gray-900 p-8 rounded-xl shadow-xl"
                    >
                        <h3 class="text-2xl font-semibold text-orange-500 mb-6">Envoyez-moi un message</h3>
                        <div class="mb-6">
                            <label for="name" class="block text-sm font-medium text-gray-300">Nom</label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                placeholder="Votre nom" 
                                required 
                                class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-white shadow-sm focus:ring-orange-500 focus:border-orange-500"
                            />
                        </div>
                        <div class="mb-6">
                            <label for="email" class="block text-sm font-medium text-gray-300">Email</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                placeholder="Votre email" 
                                required 
                                class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-white shadow-sm focus:ring-orange-500 focus:border-orange-500"
                            />
                        </div>
                        <div class="mb-6">
                            <label for="message" class="block text-sm font-medium text-gray-300">Message</label>
                            <textarea 
                                id="message" 
                                name="message" 
                                rows="5" 
                                placeholder="Votre message" 
                                required 
                                class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-white shadow-sm focus:ring-orange-500 focus:border-orange-500"
                            ></textarea>
                        </div>
                        <button 
                            type="submit" 
                            class="w-full rounded-lg bg-orange-500 px-6 py-3 text-white font-semibold shadow-lg hover:bg-orange-600 focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 focus:ring-offset-gray-900"
                        >
                            Envoyer
                        </button>
                    </form>

                    <!-- Informations de Contact -->
                    <div class="w-full lg:w-1/3 bg-gray-800 p-8 rounded-xl shadow-xl text-center">
                        <h3 class="text-2xl font-semibold text-orange-500">Mes Coordonnées</h3>
                        <p class="mt-6 text-gray-400">
                            <span class="block text-lg font-medium text-gray-300">Email :</span>
                            <a href={`mailto:${contactInfo.email}`} class="text-orange-400 hover:underline">{contactInfo.email}</a>
                        </p>
                        <p class="mt-6 text-gray-400">
                            <span class="block text-lg font-medium text-gray-300">LinkedIn :</span>
                            <a href={contactInfo.linkedin} target="_blank" class="text-orange-400 hover:underline">Mon profil LinkedIn</a>
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <BackToTop />
    </main>
</Layout>
