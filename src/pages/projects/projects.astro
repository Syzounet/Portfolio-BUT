---
import Layout from '@layouts/Layout.astro';
import projects from '@data/projects.json';
---

<Layout>
    <main>
        <section id="projects" class="py-10 bg-gray-50 dark:bg-gray-900">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-orange-600 dark:text-orange-400 mb-8 text-center">Mes Projets</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
                    {
                        projects.map(project => (
                            <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                                <img src={project.imageUrl} alt={project.img_alt} class="w-full h-48 object-cover" />
                                <div class="p-6">
                                    <h3 class="text-xl font-semibold text-gray-800 dark:text-white">{project.title}</h3>
                                    <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
                                    <div class="flex flex-wrap gap-2 mb-4">
                                        {project.tags.map(tag => (
                                            <span class="bg-orange-100 dark:bg-orange-900 text-orange-600 dark:text-orange-300 text-xs font-medium px-2 py-1 rounded">{tag}</span>
                                        ))}
                                    </div>
                                    <a href={project.url} class="text-orange-600 dark:text-orange-400 hover:underline font-medium">Voir le projet &rarr;</a>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>
</Layout>
