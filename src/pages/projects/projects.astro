---

import Layout from '@layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Card from '@components/ui/Card.astro';
import train from '@assets/images/train_gui.png';
import SAE from '@assets/images/SAE3A.png';
import Contact from '@components/Contact.astro';
import BackToTop from '@components/ui/BackToTop.astro';
const projects = await getCollection('projects');

---

<Layout>
    <main>
        <section id="projects" class="py-10 bg-gray-50 dark:bg-gray-900">
            <div class="container mx-auto px-4">
                <h2 class="font-monospace text-2xl text-orange lg:text-4xl">Mes projets</h2>
                <span class="mb-10 h-1 w-10 bg-orange"></span>
                <div class="flex flex-col lg:flex-row gap-8">
                    <Card
                        title={projects[0].data.title}
                        description={projects[0].data.description}
                        tags={projects[0].data.tags}
                        url={projects[0].data.url}
                        imageUrl={train}
                    />
                    <Card
                        title={projects[1].data.title}
                        description={projects[1].data.description}
                        tags={projects[1].data.tags}
                        url={projects[1].data.url}
                        imageUrl={SAE}
                    />
                    <Card
                        title={projects[2].data.title}
                        description={projects[2].data.description}
                        tags={projects[2].data.tags}
                        url={projects[2].data.url}
                        imageUrl={projects[2].data.imageUrl}
                    />
                </div>
            </div>
        </section>
        <Contact />
		<BackToTop />
    </main>
</Layout>
