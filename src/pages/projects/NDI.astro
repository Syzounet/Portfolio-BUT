---
import ProjectLayout from '@layouts/ProjectLayout.astro';
import ProjectHero from '@components/project/ProjectHero.astro';
import ProjectTags from '@components/project/ProjectTags.astro';
import ProjectSection from '@components/project/ProjectSection.astro';
import ProjectCard from '@components/project/ProjectCard.astro';
import ProjectCompetences from '@components/project/ProjectCompetences.astro';
import image from '@assets/images/NDI.png';
import { Image } from 'astro:assets';

const tags = ['HTML', 'CSS', 'JavaScript', 'PHP', 'Llama AI', 'Hugging Face'];
const actions = [
	{
		id: 'ac1',
		title: "AC 1 : Comprendre la diversité, la structure et la dimension de l'informatique dans une organisation",
		description: "Lors de la Nuit de l'Info, j'ai découvert la diversité des métiers de l'informatique et leur interaction. Le développement du chatbot Llama m'a permis d'appréhender l'intégration de l'IA dans les solutions d'entreprise et de comprendre les enjeux technologiques actuels.",
		icon: "building-office"
	},
	{
		id: 'ac2',
		title: "AC 2 : Appliquer une démarche pour intégrer une équipe informatique au sein d'une organisation",
		description: "J'ai intégré une équipe de 10 personnes en prenant en charge le développement du chatbot IA. Utilisation de Trello pour la gestion de projet et coordination de l'intégration de mon module avec les autres composants du système.",
		icon: "target"
	},
	{
		id: 'ac3',
		title: "AC 3 : Mobiliser les compétences interpersonnelles pour intégrer une équipe informatique",
		description: "Communication avec l'équipe pour comprendre les besoins fonctionnels, explication des possibilités techniques de l'IA Llama, et adaptation de mon développement aux contraintes du projet global. Prise en charge de la communication avec les entreprises partenaires.",
		icon: "hand-raised"
	}
];
---

<ProjectLayout title="Nuit de l'Info | Portfolio">
	<ProjectHero
		icon="chat-bubble-left-right"
		badge="Événement National • 2024"
		badgeColor="blue"
		title="Nuit de "
		titleHighlight="l'Info"
		titleHighlightColor="text-blue-500 dark:text-blue-500"
		description="Compétition nationale organisée par les IUT autour du thème océan et corps humain. Développement d'un chatbot intelligent utilisant l'IA Llama."
	/>

	<ProjectTags tags={tags} />

	<ProjectSection
		badge="Ma contribution"
		badgeColor="orange"
		title="Développement du Chatbot"
		centered={true}
	>
		<div class="grid lg:grid-cols-2 gap-12 items-center">
			<!-- Description -->
			<div class="space-y-8">
				<ProjectCard
					icon="chat-bubble-left-right"
					title="Chatbot Intelligent"
					description=""
				>
					<p class="text-gray-700 dark:text-gray-300 leading-relaxed">
						Développement d'un <span class="font-semibold text-blue-600">chatbot intelligent</span> utilisant
						l'API <span class="font-semibold text-green-600">Llama de Meta</span> via Hugging Face,
						intégré en PHP pour des interactions contextuelles sur la thématique.
					</p>
				</ProjectCard>

				<ProjectCard
					icon="bolt"
					title="Technologies utilisées"
					description=""
				>
					<p class="text-gray-700 dark:text-gray-300 leading-relaxed">
						Backend en <span class="font-semibold text-purple-600">PHP</span>,
						interface interactive en <span class="font-semibold text-yellow-600">JavaScript</span>,
						et intégration avec l'API Hugging Face pour exploiter la puissance de l'IA Llama.
					</p>
				</ProjectCard>
			</div>

			<!-- Project Image -->
			<div class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
				<Image
					src={image}
					alt="Projet Nuit de l'Info - Chatbot Llama"
					class="rounded-xl w-full"
					format="png"
					width={600}
					height={400}
					loading="eager"
				/>
			</div>
		</div>
	</ProjectSection>

	<ProjectCompetences
		badge="Compétences"
		badgeColor="blue"
		title="Apprentissages Critiques"
		competences={actions}
		accentColor="blue-600"
	/>
</ProjectLayout>
