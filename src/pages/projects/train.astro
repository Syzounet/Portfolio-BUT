---
import Layout from '@layouts/Layout.astro';
import image from '@assets/images/train_gui.png';
import { Image } from 'astro:assets';
const tags = ['Java', 'JavaFX', 'Game']
---

<Layout>
  <main class="py-12 px-6">
    <section class="max-w-screen-lg mx-auto">
      <div class="flex flex-col lg:flex-row items-center gap-8">
        <!-- Project Image -->
        <div class="flex-shrink-0 w-full lg:w-1/2">
          <!-- Static image based on the project data -->
          <Image src={image} alt='train image' 
          class="rounded-xl shadow-lg" 
          format="png" 
          width={500}
          height={500}
          loading="eager"/>  
        </div>
        
        <!-- Project Details -->
        <div class="w-full lg:w-1/2">
          <h1 class="text-4xl font-semibold text-orange mb-4">Train</h1>
          <p class="text-lg text-black dark:text-white mb-6">Un jeu de société retranscrit en une applicattion programmer en java et javaFX.</p>
          
          <!-- Tags Section -->
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag) => (
              <span class="px-2 py-1 bg-orange text-white rounded-lg text-sm">{tag}</span>
            ))}
          </div>

          <!-- Links -->
          <div class="flex gap-4">
            <a
              href= ''
              target="_blank"
              rel="noopener"
              class="inline-block px-6 py-3 bg-orange text-white rounded-lg shadow-lg hover:bg-orange-dark transition-colors"
            >
              View on GitHub
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
